# LLM Security Platform - Configuration d'environnement
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# Configuration LLM
LLM_ENDPOINT=http://localhost:11434
LLM_MODEL=llama2
LLM_TIMEOUT=30
LLM_MAX_TOKENS=500

# Configuration de sécurité
SECURITY_TIMEOUT=30
SECURITY_MAX_CONCURRENT_TESTS=3
SECURITY_RATE_LIMIT_DELAY=1.0

# Configuration de logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/security_analysis.log

# Configuration de sortie
OUTPUT_FORMAT=json
OUTPUT_SAVE_TO_FILE=true
OUTPUT_DIR=./results
OUTPUT_INCLUDE_TIMESTAMPS=true

# Configuration de base de données (optionnel)
DATABASE_URL=sqlite:///./data/security_platform.db
ELASTICSEARCH_URL=http://localhost:9200

# Configuration Azure (optionnel)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id

# Configuration de démonstration
DEMO_MODE=false
DEMO_MOCK_LLM=true
DEMO_QUICK_MODE=true
DEMO_VERBOSE_OUTPUT=true

# Configuration de développement
DEBUG=false
TEST_MODE=false
DEV_MODE=false
